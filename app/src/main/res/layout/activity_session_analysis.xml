<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/gray_light">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/analysisTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Анализ сессии"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/analysisSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Название сессии • —"
            android:textColor="@color/gray_inactive"
            android:layout_marginTop="4dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_card"
            android:orientation="vertical"
            android:padding="12dp">

            <TextView
                android:id="@+id/textOverall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Общий показатель вовлеченности: —"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Heatmap Timeline"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textTimeline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="[нет данных]"
                android:textColor="@color/gray_inactive" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="Пики внимания:"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textPeaks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="—"
                android:textColor="@color/gray_inactive" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="Падения внимания:"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textDrops"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="—"
                android:textColor="@color/gray_inactive" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnOpenReport"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Подробный отчет"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/btnOpenHistory"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:text="Сравнить / История"
                android:textAllCaps="false" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>

