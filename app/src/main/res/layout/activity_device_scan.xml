<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@color/gray_light">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Поиск устройств BrainBit"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@color/black" />

    <ProgressBar
        android:id="@+id/scanSpinner"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="12dp"
        android:indeterminate="true" />

    <ListView
        android:id="@+id/deviceList"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="12dp"
        android:divider="@color/card_stroke"
        android:dividerHeight="1dp" />

    <Button
        android:id="@+id/btnRefreshScan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Обновить поиск"
        android:textAllCaps="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Совет: держите BrainBit ближе 1 м от телефона для стабильного сигнала."
        android:textColor="@color/gray_inactive" />

    <Button
        android:id="@+id/btnToPairing"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Перейти к подключению"
        android:textAllCaps="false" />
</LinearLayout>

