<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_light"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Настройки"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@drawable/bg_card"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Тема и цвета"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Switch
                android:id="@+id/switchNightMode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ночной режим"
                android:textColor="@color/gray_inactive" />

            <RadioGroup
                android:id="@+id/radioPalette"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="8dp">

                <RadioButton
                    android:id="@+id/radioNeon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Неоновая палитра"
                    android:textColor="@color/gray_inactive" />

                <RadioButton
                    android:id="@+id/radioOcean"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ocean (светлая)"
                    android:textColor="@color/gray_inactive" />

                <RadioButton
                    android:id="@+id/radioSunset"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sunset (светлая тёплая)"
                    android:textColor="@color/gray_inactive" />
            </RadioGroup>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@drawable/bg_card"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Данные"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Switch
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Сохранять локально"
                android:textColor="@color/gray_inactive"
                android:checked="true" />

            <Switch
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Экспорт по Wi‑Fi"
                android:textColor="@color/gray_inactive" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>

